{
  "manifest_version": 2,

  "name": "Tab counter",
  "description": "Counts how many times you've opened a tab of facebook",
  "version": "1.0",

  "background": {
    "scripts": ["tabs.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "tabs.html"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "storage"
  ]
}
